<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="lottery_model" model="ir.ui.view">
        <field name="name">Modulo de Rifas</field>
        <field name="model">lottery.model</field>
        <field name="arch" type="xml">
            <form string="Rifa">
                    <group>
                        <field name="event" required="1"/>
                        <field name="quantity_tickets" required="1"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="image"/>
                        <field name="award_id"/>
                        <field name="status"/>
                        <field name="id_customer_winner"/>
                    </group>
                </form>
        </field>
    </record>
    <record id="lottery.ticket.line" model="ir.ui.view">
        <field name="name">Boletos de rifas</field>
        <field name="model">lottery.ticket.line</field>
        <field name="arch" type="xml">
            <form string="Boletos">
                    <group>
                        <field name="ticket" required="1"/>
                        <field name="status" required="1"/>
                        <field name="is_winner"/>
                        <field name="id_lottery"/>
                    </group>
            </form>
        </field>
    </record>
    

</odoo>
